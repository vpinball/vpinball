////ps_main_bg_decal

// BG-Decal

void main()
{
   FS_LAYER_TO_GLOBAL;
   color = cBase_Alpha;
}

////ps_main_bg_decal_texture

in vec2 tex01;

void main()
{
   FS_LAYER_TO_GLOBAL;
   float4 pixel = texture(tex_base_color, tex01);
   if (pixel.a <= alphaTestValue) discard;
   color = pixel * cBase_Alpha;
}


