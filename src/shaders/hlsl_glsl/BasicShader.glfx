////gs_main

in vec2 tex01_gs[];
out vec2 tex01;

in vec3 worldPos_gs[];
out vec3 worldPos;

in vec3 normal_gs[];
out vec3 normal;

in vec3 tablePos_gs[];
out float3 tablePos;

flat out float eye;

void main()
{
   GS_LAYER_COPY;
   for (int i=0; i<gl_in.length(); i++) {
      gl_Position = matWorldViewProj[eye_gs[i]] * gl_in[i].gl_Position;
      gl_ClipDistance[0] = gl_in[i].gl_ClipDistance[0];
      tex01 = tex01_gs[i];
      tablePos = tablePos_gs[i];
      worldPos = worldPos_gs[i];
      normal = normal_gs[i];
      eye = eye_gs[i];
      EmitVertex();
   }
   EndPrimitive();
}

